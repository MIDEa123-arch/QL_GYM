@model ManagerApp.ViewModel.AccountModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>
    body {
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .login-container {
        min-height: calc(100vh - 100px);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 320px;
        padding: 30px 25px;
    }

        .login-card h3 {
            text-align: center;
            margin-bottom: 25px;
            font-size: 20px;
            color: #333;
            font-weight: normal;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        display: none;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px 10px 35px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
        background-repeat: no-repeat;
        background-position: 10px center;
        background-size: 16px;
    }

        .form-control:focus {
            outline: none;
            border-color: #4dd0e1;
        }

    .input-username {
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="%234dd0e1" viewBox="0 0 16 16"><path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/></svg>');
    }

    .input-password {
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="%234dd0e1" viewBox="0 0 16 16"><path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/></svg>');
    }

    .btn-login {
        width: 100%;
        padding: 10px;
        background-color: #4dd0e1;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        margin-top: 10px;
    }

        .btn-login:hover {
            background-color: #26c6da;
        }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <h3>Đăng Nhập</h3>

        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.TenDangNhap, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.TenDangNhap, new
                {
                    @class = "form-control input-username",
                    placeholder = "Tên đăng nhập"
                })
                @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MatKhau, new { @class = "form-label" })
                @Html.PasswordFor(m => m.MatKhau, new
                {
                    @class = "form-control input-password",
                    placeholder = "Mật mã"
                })
                @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
            </div>
            <div class="mt-3 text-danger small">
                @if (TempData["Error"] != null)
                {
                    <span>@TempData["Error"]</span>
                }
            </div>

            <button type="submit" class="btn-login">Đăng nhập</button>
        }
    </div>
</div>