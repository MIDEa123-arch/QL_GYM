@model IEnumerable<ManagerApp.Models.SANPHAM>
@{
    ViewBag.Title = "Quản lý Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Danh sách Sản phẩm</h2>
        <p class="text-muted mb-0">Quản lý thông tin sản phẩm trong hệ thống</p>
    </div>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm sản phẩm
    </a>
</div>

<!-- Search & Filter -->
<div class="card mb-3">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" placeholder="Tìm kiếm sản phẩm...">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option selected>Tất cả loại sản phẩm</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option selected>Tất cả hãng</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100">
                    <i class="fas fa-filter me-2"></i>Lọc
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Mã SP</th>
                        <th>Tên sản phẩm</th>
                        <th>Loại</th>
                        <th>Hãng</th>
                        <th class="text-end">Đơn giá</th>
                        <th class="text-end">Giá KM</th>
                        <th class="text-center">Tồn kho</th>
                        <th class="text-center pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-light text-dark">@item.MASP</span>
                                </td>
                                <td>
                                    <div class="fw-semibold">@item.TENSP</div>
                                    <small class="text-muted">@item.XUATXU</small>
                                </td>
                                <td>
                                    <span class="badge bg-primary-subtle text-primary">@item.MALOAISP</span>
                                </td>
                                <td>@item.HANG</td>
                                <td class="text-end">
                                    <span class="text-muted">@string.Format("{0:N0} đ", item.DONGIA)</span>
                                </td>
                                <td class="text-end">
                                    @if (item.GIAKHUYENMAI.HasValue && item.GIAKHUYENMAI > 0)
                                    {
                                        <span class="text-danger fw-semibold">@string.Format("{0:N0} đ", item.GIAKHUYENMAI)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.SOLUONGTON <= 10)
                                    {
                                        <span class="badge bg-danger">@item.SOLUONGTON</span>
                                    }
                                    else if (item.SOLUONGTON <= 50)
                                    {
                                        <span class="badge bg-warning text-dark">@item.SOLUONGTON</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@item.SOLUONGTON</span>
                                    }
                                </td>
                                <td class="text-center pe-4">
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Details", new { id = item.MASP })"
                                           class="btn btn-outline-info"
                                           title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.MASP })"
                                           class="btn btn-outline-primary"
                                           title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.MASP })"
                                           class="btn btn-outline-danger"
                                           title="Xóa"
                                           onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">
                                <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                <p class="mb-0">Chưa có sản phẩm nào</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    <div class="card-footer bg-white">
        <div class="d-flex justify-content-between align-items-center">
            <div class="text-muted small">
                Hiển thị <strong>1-10</strong> trong tổng số <strong>@(Model?.Count() ?? 0)</strong> sản phẩm
            </div>
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item disabled">
                        <a class="page-link" href="#"><i class="fas fa-chevron-left"></i></a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<style>
    .badge.bg-primary-subtle {
        background-color: rgba(13, 110, 253, 0.1) !important;
    }

    .table > :not(caption) > * > * {
        padding: 1rem 0.75rem;
    }

    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
    }
</style>